interface Noticia { id: string; title: string; content: string; image: string | null; createdAt: Date; }
interface Produto { id: string; codigo: string | null; nome: string; preco: number; imagem: string | null; destaque: boolean; }
interface Curso { id: string; titulo: string; modalidade: string; cargaHoraria: string; imagem: string | null; destaque: boolean; }
interface HomeStats { totalUsuarios: number; totalProdutos: number; totalNoticias: number; totalCursos: number; }

async function getHomeData(): Promise<{ noticias: Noticia[]; produtos: Produto[]; cursos: Curso[]; stats: HomeStats; }> {
  const [noticias, produtos, cursos, totalUsuarios, totalProdutos, totalNoticias, totalCursos] = await Promise.all([
    prisma.post.findMany({
      where: { published: true },
      orderBy: { createdAt: 'desc' },
      take: 3,
      select: { id: true, title: true, content: true, image: true, createdAt: true }
    }),
    prisma.produto.findMany({
      where: { destaque: true },
      orderBy: { nome: 'asc' },
      take: 8,
      select: { id: true, codigo: true, nome: true, preco: true, imagem: true, destaque: true }
    }),
    prisma.curso.findMany({
      where: { inscricoesAbertas: true },
      orderBy: { titulo: 'asc' },
      take: 6,
      select: { id: true, titulo: true, modalidade: true, cargaHoraria: true, imagem: true, destaque: true }
    }),
    prisma.user.count(),
    prisma.produto.count(),
    prisma.post.count({ where: { published: true } }),
    prisma.curso.count(),
  ]);
  return { noticias, produtos, cursos, stats: { totalUsuarios, totalProdutos, totalNoticias, totalCursos } };
}

